{
  "input": {
    "format": "csv",
    "path": "mnt/houses/**/*.csv",
    "options": {
      "basePath": "mnt/houses/",
      "header": true,
      "sep": ","
    },
    "schema": {
      "type": "struct",
      "fields": [
        {
          "name": "id",
          "type": "long",
          "nullable": true,
          "metadata": {}
        },
        {
          "name": "city",
          "type": "string",
          "nullable": true,
          "metadata": {}
        }
      ]
    }
  },
  "output": {
    "format": "json",
    "path": "mnt/test/",
    "mode": "overwrite",
    "partitionBy": "city_str_len",
    "options": {},
    "schema": {
      "type": "struct",
      "fields": [
        {
          "name": "id",
          "type": "long",
          "nullable": true,
          "metadata": {}
        },
        {
          "name": "city",
          "type": "string",
          "nullable": true,
          "metadata": {}
        },
        {
          "name": "city_str_len",
          "type": "integer",
          "nullable": false,
          "metadata": {}
        },
        {
          "name": "city_str_len_plus_one",
          "type": "integer",
          "nullable": false,
          "metadata": {}
        }
      ]
    }
  },
  "transformations": [
    {
      "col": "city_str_len",
      "value": "length(col('city'))"
    },
    {
      "col": "city_str_len_plus_one",
      "value": "col('city_str_len') + 1"
    }
  ]
}
