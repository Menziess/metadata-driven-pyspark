{
  "input": [
    {
      "name": "friends",
      "format": "json",
      "path": "mnt/friends/"
    },
    {
      "name": "houses",
      "format": "csv",
      "path": "mnt/houses/**/*.csv",
      "options": {
        "basePath": "mnt/houses/",
        "header": true,
        "sep": ","
      }
    }
  ],
  "output": {
    "format": "json",
    "path": "mnt/test/",
    "mode": "overwrite",
    "options": {}
  },
  "transformations": [
    {
      "how": "inner",
      "other": "houses",
      "on": "friends.id == houses.id"
    }
  ]
}
